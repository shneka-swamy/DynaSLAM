{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "cmake",
            "command": "build",
            "preset": "Debug",
            "options": {
                "cwd": "${workspaceFolder}/cmake-build-debug"
            },
            "group": "build"
        },
        {
            "label": "Release Build",
            "type": "cmake",
            "command": "build",
            "preset": "Release",
            "options": {
                "cwd": "${workspaceFolder}/cmake-build-release"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}